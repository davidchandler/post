<h3>All Posts</h3>


<ul>

<% @posts.each do |post| %>



  <li>

   <% if current_user   %>
     (
     <%= link_to '+', vote_post_path(post, vote:true),method: 'post',remote: true  %> 
   <% end %>
   
   <%= post.total_votes.to_s %>
   <% if current_user   %>
     <%= link_to '-', vote_post_path(post, vote:false),method: 'post',remote: true  %>
     )
   <% end %>

  <%= link_to post.title, post_path(post) %> 
  <%= link_to 'edit', edit_post_path(post) %> </li>
<% end %>

</ul>
